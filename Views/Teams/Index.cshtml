@model IEnumerable<FutbolPeruano.Models.Team>

@{
    ViewData["Title"] = "Equipos";
}

<h1>Equipos de Fútbol</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Equipo</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Ciudad</th>
            <th>Fundación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.City</td>
                <td>@(item.FoundedDate.HasValue ? item.FoundedDate.Value.ToShortDateString() : "N/A")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Ver Jugadores</a>
                </td>
            </tr>
        }
    </tbody>
</table>
