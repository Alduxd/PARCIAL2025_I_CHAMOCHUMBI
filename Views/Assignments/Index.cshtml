@model IEnumerable<FutbolPeruano.Models.Assignment>

@{
    ViewData["Title"] = "Asignaciones de Jugadores";
}

<h1>Jugadores y sus Equipos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Asociar Nuevo Jugador</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Jugador</th>
            <th>Edad</th>
            <th>Posici√≥n</th>
            <th>Equipo</th>
            <th>Fecha de Ingreso</th>
            <th>Notas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Player.Name</td>
                <td>@item.Player.Age</td>
                <td>@item.Player.Position</td>
                <td>@item.Team.Name</td>
                <td>@item.JoinDate.ToShortDateString()</td>
                <td>@item.Notes</td>
            </tr>
        }
    </tbody>
</table>
