@model FutbolPeruano.Models.Assignment

@{
    ViewData["Title"] = "Asociar Jugador a Equipo";
}

<h1>Asociar Jugador a Equipo</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="PlayerId" class="control-label">Jugador</label>
                <select asp-for="PlayerId" class="form-control" asp-items="ViewBag.PlayerId">
                    <option value="">-- Seleccione un jugador --</option>
                </select>
                <span asp-validation-for="PlayerId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TeamId" class="control-label">Equipo</label>
                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId">
                    <option value="">-- Seleccione un equipo --</option>
                </select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label">Notas</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <input type="submit" value="Asociar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
