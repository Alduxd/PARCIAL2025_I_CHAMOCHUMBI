@model IEnumerable<FutbolPeruano.Models.Player>

@{
    ViewData["Title"] = "Jugadores";
}

<h1>Jugadores de Fútbol</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nuevo Jugador</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Edad</th>
            <th>Posición</th>
            <th>Equipos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Position</td>
                <td>
                    @if (item.Assignments != null && item.Assignments.Any())
                    {
                        foreach (var assignment in item.Assignments)
                        {
                            <span class="badge bg-primary me-1">@assignment.Team.Name</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Sin equipo</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
